{
  "name": "quickcredit",
  "version": "1.0.0",
  "description": "An online lending platform that provides short term soft loans to individuals",
  "main": "app.js",
  "scripts": {
    "build": "npm run clean && npm run build-babel",
    "build-babel": "babel src -d build",
    "clean": "rm -rf build .nyc_output coverage && mkdir build",
    "coverage": "nyc report --reporter=text-lcov | coveralls && nyc report --reporter=lcov",
    "db:migrate": "set DEBUG=DB_MIGRATE && babel-node ./src/database/migrate.js",
    "db:seed": "set DEBUG=DB_SEEDING && babel-node ./src/database/seeder.js",
    "start": "npm run build && node ./build/app.js",
    "start:dev": "set DEBUG=dev_ENV && babel-watch ./src/app.js",
    "test": "cross-env NODE_ENV=test && npm run db:migrate && npm run db:seed && nyc mocha ./src/test -r @babel/register --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meetKazuki/QuickCredit.git"
  },
  "author": "Desmond Edem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/meetKazuki/QuickCredit/issues"
  },
  "homepage": "https://github.com/meetKazuki/QuickCredit#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "editorconfig": "^0.15.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": "10.x"
  }
}
